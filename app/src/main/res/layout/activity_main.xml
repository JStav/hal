<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weatherflow.permissionutilssample.MainActivity"
    >

  <TextView
      android:id="@+id/tv_location_permission"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Location Permission"
      app:layout_constraintRight_toRightOf="@+id/btn_request_location"
      app:layout_constraintLeft_toLeftOf="@+id/btn_request_location"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="16dp"
      />

  <Button
      android:id="@+id/btn_request_location"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Request"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_location_permission"
      />


  <TextView
      android:id="@+id/tv_multiple_permissions"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Request multiple permissions"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/btn_request_location"
      app:layout_constraintRight_toRightOf="@+id/btn_request_multiple"
      app:layout_constraintLeft_toLeftOf="@+id/btn_request_multiple"
      app:layout_constraintHorizontal_bias="0.494"
      android:layout_marginRight="0dp"
      android:layout_marginLeft="0dp"
      />

  <Button
      android:id="@+id/btn_request_multiple"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Request"
      android:layout_marginTop="7dp"
      app:layout_constraintTop_toBottomOf="@+id/tv_multiple_permissions"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginRight="8dp"
      app:layout_constraintRight_toRightOf="parent"
      />


</android.support.constraint.ConstraintLayout>
